<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Les yeux â€” mini jeu Junji Ito</title>

  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=Roboto+Mono:wght@300;400&display=swap" rel="stylesheet">

  <style>
    :root {
      --bg: #050505;
      --blood: #b00020;
      --blood-soft: #4b0010;
      --text: #f5f5f5;
    }
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      background: radial-gradient(circle at center, #141414 0%, #050505 55%, #000 100%);
      min-height: 100vh;
      overflow: hidden;
      font-family: "Cormorant Garamond", serif;
      color: var(--text);
    }

    body::before {
      content: "";
      position: fixed;
      inset: -40px;
      pointer-events: none;
      background:
        repeating-linear-gradient(
          to bottom,
          rgba(255, 255, 255, 0.02) 0px,
          rgba(255, 255, 255, 0.01) 2px,
          rgba(0, 0, 0, 0.4) 4px
        );
      opacity: 0.7;
      animation: drift 35s linear infinite;
      mix-blend-mode: soft-light;
      z-index: 1;
    }
    @keyframes drift { 0% { transform: translateY(0);} 100% { transform: translateY(200px);} }

    #scene { width: 100vw; height: 100vh; cursor: crosshair; position: relative; z-index: 2; }

    #spiral-bg {
      position: absolute;
      width: 420px; height: 420px;
      border-radius: 50%;
      border: 2px solid rgba(176, 0, 32, 0.15);
      left: 50%; top: 50%;
      transform: translate(-50%, -50%);
      opacity: 0.4; box-shadow: 0 0 80px rgba(0,0,0,0.9);
      animation: rotateSpiral 45s linear infinite;
    }
    @keyframes rotateSpiral { 0% { transform: translate(-50%, -50%) rotate(0deg);} 100% { transform: translate(-50%, -50%) rotate(720deg);} }

    #hud {
      position: fixed; top: 16px; left: 18px; z-index: 3;
      background: rgba(0,0,0,0.7); padding: 8px 12px;
      border-radius: 4px; border: 1px solid rgba(176,0,32,0.5);
      font-family:"Roboto Mono", monospace; font-size: 13px;
    }
    #hud span { color: var(--blood); }

    #hint {
      position: fixed; top: 16px; right: 18px; z-index: 3;
      background: rgba(0,0,0,0.65); padding: 8px 12px;
      border-radius: 4px; border: 1px solid rgba(255,255,255,0.1);
      max-width: 260px; font-size: 13px; text-align: right;
    }

    .eye {
      position: absolute; width: 90px; height: 54px;
      border-radius: 50%;
      background: radial-gradient(circle,#fff 0%,#ccc 40%,#999 65%,#111 100%);
      box-shadow: 0 0 30px rgba(0,0,0,0.9),0 0 12px rgba(176,0,32,0.6);
      display:flex; justify-content:center; align-items:center;
      cursor:pointer; transition: transform .2s ease-out, opacity .25s;
    }

    .eye-ball {
      width: 38px; height: 38px; border-radius:50%;
      background: radial-gradient(circle,#660000 0%,#210000 55%,#000 100%);
      box-shadow:0 0 18px rgba(176,0,32,0.9);
    }

    .pupil { width:16px; height:16px; border-radius:50%; background:#000; }
    .eye.closed { opacity:0; transform:scale(.7); pointer-events:none; }

    #game-over-overlay {
      position:fixed; inset:0; background:rgba(0,0,0,.96);
      display:flex; flex-direction:column; justify-content:center; align-items:center;
      opacity:0; pointer-events:none; transition:.4s;
    }
    #game-over-overlay.show { opacity:1; pointer-events:auto; }
    #game-over-overlay h1 { color:var(--blood); margin-bottom:12px; letter-spacing:.2em; }
    #restart { margin-top:6px; padding:8px 16px; background:transparent;border:1px solid var(--blood); color:var(--text); cursor:pointer; }
  </style>
</head>
<body>

  <!-- ðŸŽµ Musique -->
  <audio id="bgMusic" src="Game-over-Retro-Video-Game-1-422479.mp3" loop></audio>

  <div id="scene"><div id="spiral-bg"></div></div>

  <div id="hud">
    yeux rÃ©duits : <span id="closed-count">0</span><br>
    yeux encore ouverts : <span id="open-count">0</span> / <span id="max-eyes"></span>
  </div>

  <div id="hint">Clique sur les yeux avant qu'ils n'atteignent le centre.</div>

  <div id="game-over-overlay">
    <h1>GAME OVER</h1>
    <p id="game-over-text"></p>
    <button id="restart">recommencer</button>
  </div>

<script>
/************* MUSIQUE **************/
const bgMusic = document.getElementById("bgMusic");
let musicStarted = false;

document.addEventListener("click", () => {
  if (!musicStarted) {
    bgMusic.volume = 0.35;
    bgMusic.play().catch(()=>{});
    musicStarted = true;
  }
});

function stopMusic(){ bgMusic.pause(); }
function startMusicAgain(){ bgMusic.currentTime=0; bgMusic.play().catch(()=>{}); }

/************* JEU **************/
const scene=document.getElementById("scene"),closedCountEl=document.getElementById("closed-count"),openCountEl=document.getElementById("open-count"),maxEyesEl=document.getElementById("max-eyes"),overlay=document.getElementById("game-over-overlay"),overlayText=document.getElementById("game-over-text"),restartBtn=document.getElementById("restart");

let mouseX=window.innerWidth/2,mouseY=window.innerHeight/2;
document.addEventListener("mousemove",e=>{mouseX=e.clientX;mouseY=e.clientY;});

let eyes=[],closedCount=0,openCount=0,maxEyes=10,spawnIntervalMs=1400,spawnIntervalId=null,gameOver=false;
maxEyesEl.textContent=maxEyes;

function createEye(){
  if(gameOver)return;
  const eye=document.createElement("div"); eye.classList.add("eye");
  const pupil=document.createElement("div"); const ball=document.createElement("div");
  pupil.classList.add("pupil"); ball.classList.add("eye-ball");
  ball.appendChild(pupil); eye.appendChild(ball); scene.appendChild(eye);

  let x=Math.random()*(window.innerWidth-80)+40, y=Math.random()*(window.innerHeight-80)+40;
  eye.style.left=`${x}px`; eye.style.top=`${y}px`;

  eyes.push({el:eye,pupil,x,y,speedBase:0.08+Math.random()*0.06});
  openCount++; updateHud();

  eye.addEventListener("click",()=>{ if(gameOver)return; eye.classList.add("closed"); openCount--; closedCount++; updateHud(); setTimeout(()=>eye.remove(),250); });
}

function updateHud(){ closedCountEl.textContent=closedCount; openCountEl.textContent=openCount; if(openCount>=maxEyes) triggerGameOver("Trop d'yeux t'observaient en mÃªme temps."); }

function triggerGameOver(text){
  if(gameOver)return; gameOver=true; clearInterval(spawnIntervalId); stopMusic();
  overlayText.textContent=text; overlay.classList.add("show");
}

function resetGame(){
  gameOver=false; eyes.forEach(e=>e.el.remove()); eyes=[]; closedCount=0; openCount=0; updateHud(); overlay.classList.remove("show");
  startMusicAgain();
  spawnIntervalId=setInterval(createEye,spawnIntervalMs); for(let i=0;i<3;i++) createEye();
}

function animate(){
  const cx=window.innerWidth/2, cy=window.innerHeight/2;
  eyes.forEach(e=>{
    const dx=cx-(e.x+45), dy=cy-(e.y+27), dist=Math.sqrt(dx*dx+dy*dy)||1;
    e.x+=(dx/dist)*(e.speedBase*dist/80); e.y+=(dy/dist)*(e.speedBase*dist/80);
    e.el.style.left=`${e.x}px`; e.el.style.top=`${e.y}px`;
    if(!gameOver && dist<120) triggerGameOver("Un Å“il a atteint le centre.");
  });
  requestAnimationFrame(animate);
}

resetGame(); animate();
restartBtn.addEventListener("click",resetGame);
</script>

</body>
</html>
