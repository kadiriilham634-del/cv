<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Animation avec Anime.js</title>

  <style>
    html, body {
      height: 100%;
      margin: 0;
    }

    body {
      display: flex;
      justify-content: center;
      align-items: center;
      background: #f4f4f9;
      font-family: Arial, Helvetica, sans-serif;
    }

    .texte {
      font-size: clamp(32px, 6vw, 60px);
      font-weight: bold;
      color: #333;
    }
  </style>
</head>

<body>
  <div class="texte">Bonjour le monde</div>

  <!-- Import classique d’Anime.js depuis un CDN -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>

  <script>
    // On attend que la page soit bien chargée
    window.addEventListener('DOMContentLoaded', () => {
      const el = document.querySelector('.texte');

      // Création d’une animation simple et fluide
      anime.timeline({ loop: true })
        .add({
          targets: el,
          translateY: [-30, 0],
          opacity: [0, 1],
          duration: 800,
          easing: 'easeOutExpo'
        })
        .add({
          targets: el,
          scale: [1, 1.1],
          duration: 1000,
          easing: 'easeInOutSine'
        })
        .add({
          targets: el,
          translateY: [0, 30],
          opacity: [1, 0],
          duration: 800,
          easing: 'easeInExpo',
          delay: 500
        });
    });
  </script>
</body>
</html>
